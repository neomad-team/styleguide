{
  "name": "neomad-styleguide",
  "version": "1.0.0",
  "description": "Neomad styleguide, built with atomic design mindset",
  "scripts": {
    "lint": "stylelint content/styles/**/*.css --config postcss.linter.json",
    "build-test": "postcss ./content/styles/main.css -o ./content/dist/neomad-test.css --watch",
    "build-prod": "postcss ./content/styles/main.css -o ./content/dist/neomad-prod.css --env prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neomad-team/styleguide.git"
  },
  "keywords": [
    "styleguide",
    "atomic design",
    "css",
    "vanillaCSS",
    "cssnext"
  ],
  "author": "neomad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neomad-team/styleguide/issues"
  },
  "homepage": "https://github.com/neomad-team/styleguide#readme",
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "cssnano": "^4.0.5",
    "postcss": "^7.0.2",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-discard-duplicates": "^4.0.0",
    "postcss-import": "^12.0.0",
    "postcss-preset-env": "^5.3.0",
    "postcss-reporter": "^5.0.0",
    "postcss-url": "^7.3.2",
    "precss": "^3.1.2",
    "stylelint": "^9.4.0",
    "stylelint-a11y": "^1.1.7",
    "stylelint-cli": "^1.0.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
